---
export interface experience {
  href: string;
  className: string;
}

const { href, className } = Astro.props;
---

<a
  href={href}
  class={`
    font-inter 
    inline-flex
    items-center
    justify-center
    text-white
    font-semibold
    py-2 px-5 md:px-7 
    gap-2 rounded-lg
    cursor-pointer
    text-sm md:text-base transition 
    ${className}
    `}
  target="_blank"
  rel="noopener noreferrer"
>
  <slot />
</a>
