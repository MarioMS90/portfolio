---
import EXPERIENCES from '@/constants/experiences';
---

<ol
  class="relative
    space-y-24
    border-s border-gray-300
    pb-20 pt-10
    dark:border-gray-500"
>
  {
    EXPERIENCES.map(experience => (
      <li class="ms-5 justify-between md:ms-6 md:flex">
        <div class="md:max-w-[30%]">
          <div
            class="absolute 
              -start-1.5 
              mt-2 
              h-3 w-3 
              rounded-full 
              bg-secondary"
          />
          <h3
            class="text-balance 
              font-inter text-xl font-semibold 
              text-primary
              dark:text-white">
            {experience.title}
          </h3>
          <time
            class="mb-1 
              text-sm font-normal 
              leading-6 
              text-gray-500 dark:text-gray-200">
            {experience.date}
          </time>
        </div>

        <p
          class="mt-8 
            text-base font-normal text-gray-500 
            md:mt-0 md:max-w-[60%] 
            dark:text-gray-200">
          <Fragment set:html={experience.description} />
        </p>
      </li>
    ))
  }
</ol>
