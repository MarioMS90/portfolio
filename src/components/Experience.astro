---
import { EXPERIENCES } from '@/constants/experiences';
---

<ol
  class="space-y-24 relative border-s pt-10 pb-20 border-gray-300 dark:border-gray-500"
>
  {
    EXPERIENCES.map(experience => (
      <li class="ms-5 md:ms-6 md:flex justify-between">
        <div class="md:max-w-[30%]">
          <div class="absolute w-3 h-3 bg-secondary rounded-full mt-2 -start-1.5" />
          <h3 class="text-xl font-inter font-semibold text-primary dark:text-white text-balance">
            {experience.title}
          </h3>
          <time class="mb-1 text-sm font-normal leading-6 text-gray-500 dark:text-gray-200">
            {experience.date}
          </time>
        </div>
        <p class="md:mt-0 mt-8 md:max-w-[60%] text-base font-normal text-gray-500 dark:text-gray-200">
          <Fragment set:html={experience.description} />
        </p>
      </li>
    ))
  }
</ol>
