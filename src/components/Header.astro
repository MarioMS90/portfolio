---
import DarkModeIcon from './icons/DarkMode.astro';
import LightModeIcon from './icons/LightMode.astro';

const navItems = [
  {
    title: 'Inicio',
    url: '/#inicio',
    class: 'hidden md:block',
  },
  {
    title: 'Experiencia',
    url: '/#experiencia',
  },
  {
    title: 'Stack',
    url: '/#stack',
  },
  {
    title: 'Proyectos',
    url: '/#proyectos',
  },
  {
    title: 'Sobre m√≠',
    url: '/#sobre-mi',
  },
  {
    title: 'Contacto',
    url: '/#contacto',
    class: 'hidden md:block',
  },
];
---

<header class="w-full px-4 font-inter font-medium py-4 fixed top-0 z-10">
  <div
    class="flex gap-3 md:gap-0 justify-center md:justify-between items-center mx-auto lg:max-w-4xl md:max-w-3xl"
  >
    <div class="text-2xl hidden md:block">
      mario<span class="font-bold text-secondary">.dev</span>
    </div>
    <nav class="flex gap-3 md:gap-4 text-base">
      {
        navItems.map(item => (
          <a href={item.url} class={item.class}>
            {item.title}
          </a>
        ))
      }
    </nav>
    <DarkModeIcon id="dark-mode" class="h-5 md:h-7" />
  </div>
</header>
