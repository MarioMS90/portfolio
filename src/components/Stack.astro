---
import STACK from '@/constants/stack-items';
import StackElement from './StackElement.astro';
import FadeIn, { AnimationName } from './FadeIn.astro';

const stackGroups = [
  {
    title: 'Lenguajes',
    items: STACK.LANGUAGES,
  },
  {
    title: 'Frameworks',
    items: STACK.FRAMEWORKS,
  },
  {
    title: 'Herramientas',
    items: STACK.TOOLS,
  },
];
---

<div class="space-y-12">
  {
    stackGroups.map(stackGroup => (
      <div class="stack-group">
        <h3
          class="mb-7 
            font-inter 
            text-xl font-semibold text-primary 
            dark:text-white">
          {stackGroup.title}
        </h3>
        <ul class="flex flex-wrap gap-8">
          {stackGroup.items.map((item, index) => (
            <FadeIn
              as="li"
              animation={AnimationName.FADE_IN_UP}
              delay={`${(index + 1) * 300}ms`}
              showOnScroll={true}>
              <StackElement>
                <item.icon class="h-7" />
                {item.name}
              </StackElement>
            </FadeIn>
          ))}
        </ul>
      </div>
    ))
  }
</div>
