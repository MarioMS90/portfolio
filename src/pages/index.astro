---
import Layout from '@/layouts/Layout.astro';
import SectionContainer from '@/components/SectionContainer.astro';
import SectionTitle from '@/components/SectionTitle.astro';
import Experiencie from '@/components/Experience.astro';
import Stack from '@/components/Stack.astro';
import Projects from '@/components/Projects.astro';
import Hero from '@/components/Hero.astro';
import AboutMe from '@/components/AboutMe.astro';
import BriefcaseIcon from '@/components/icons/Briefcase.astro';
import StackIcon from '@/components/icons/Stack.astro';
import CodeIcon from '@/components/icons/Code.astro';
import UserIcon from '@/components/icons/User.astro';
---

<Layout
  title="Portfolio de Mario Muñoz - Frontend Developer"
  description="Contacta con Mario Muñoz, Frontend Developer, para trabajar en tu proyecto."
>
  <main class="px-5">
    <SectionContainer className="pt-28 md:pt-40" id="hero">
      <Hero />
    </SectionContainer>

    <SectionContainer id="experience" className="pt-28 md:pt-40">
      <SectionTitle>
        <BriefcaseIcon slot="icon" />
        Experiencia
      </SectionTitle>
      <Experiencie />
    </SectionContainer>

    <SectionContainer id="stack">
      <SectionTitle>
        <StackIcon slot="icon" />
        Stack
      </SectionTitle>
      <Stack />
    </SectionContainer>

    <SectionContainer id="projects">
      <SectionTitle>
        <CodeIcon slot="icon" />
        Proyectos
      </SectionTitle>
      <Projects />
    </SectionContainer>

    <SectionContainer id="about-me">
      <SectionTitle>
        <UserIcon slot="icon" />
        Sobre mí
      </SectionTitle>
      <AboutMe />
    </SectionContainer>
  </main>
</Layout>
