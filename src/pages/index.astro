---
import Layout from '../layouts/Layout.astro';
import SectionContainer from '../components/SectionContainer.astro';
import SectionTitle from '../components/SectionTitle.astro';
import Experiencie from '../components/Experience.astro';
import Stack from '../components/Stack.astro';
import Projects from '../components/Projects.astro';
import Intro from '../components/Intro.astro';
import AboutMe from '../components/AboutMe.astro';
import BriefcaseIcon from '../components/icons/Briefcase.astro';
import StackIcon from '../components/icons/Stack.astro';
import CodeIcon from '../components/icons/Code.astro';
import UserIcon from '../components/icons/User.astro';
---

<Layout
  title="Portfolio de Mario Muñoz - Frontend Developer"
  description="Contacta con Mario Muñoz, Frontend Developer, para trabajar en tu proyecto."
>
  <main class="px-4">
    <SectionContainer class="py-28 md:py-40">
      <Intro />
    </SectionContainer>

    <div class="space-y-24 md:space-y-28">
      <SectionContainer>
        <SectionTitle>
          <BriefcaseIcon class="size-8" />
          Experiencia
        </SectionTitle>
        <Experiencie />
      </SectionContainer>

      <SectionContainer>
        <SectionTitle>
          <StackIcon class="size-8" />
          Stack
        </SectionTitle>
        <Stack />
      </SectionContainer>

      <SectionContainer>
        <SectionTitle>
          <CodeIcon class="size-8" />
          Proyectos
        </SectionTitle>
        <Projects />
      </SectionContainer>

      <SectionContainer>
        <SectionTitle>
          <UserIcon class="size-8" />
          Sobre mí
        </SectionTitle>
        <AboutMe />
      </SectionContainer>
    </div>
  </main>
</Layout>
